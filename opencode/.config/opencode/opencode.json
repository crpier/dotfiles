{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin-macchiato",
  "default_agent": "plan",
  "agent": {
    "architect": {
      "description": "Discusses software design and challenges user assumptions",
      "mode": "primary",
      "temperature": 0.7,
      "prompt": "{file:./prompts/architect.md}",
      "model": "openai/gpt-5.2-codex",
      "reasoningEffort": "high"
    },
    "ask": {
      "description": "Asks questions about code",
      "mode": "primary",
      "temperature": 0,
      "prompt": "{file:./prompts/ask.md}",
      "model": "openai/gpt-5.2-codex"
    },
    "review": {
      "description": "Review uncommited changes",
      "mode": "subagent",
      "temperature": 0.7,
      "prompt": "{file:./prompts/review.md}",
      "model": "openai/gpt-5.2-codex",
      "reasoningEffort": "low"
    },
    "explore": {
      "model": "openai/gpt-5.2-codex"
    },
    "general": {
      "model": "openai/gpt-5.2-codex"
    }
  },
  "permission": {
    "bash": "allow",
    "codesearch": "allow",
    "doom_loop": "allow",
    "edit": "allow",
    "external_directory": "allow",
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "lsp": "allow",
    "question": "allow",
    "read": "allow",
    "task": "allow",
    "todoread": "allow",
    "todowrite": "allow",
    "webfetch": "allow",
    "websearch": "allow"
  },
  "keybinds": {
    "session_child_cycle": "ctrl+h",
    "session_child_cycle_reverse": "ctrl+l"
  }
}
